{
	"exclude": ["node_modules", "**/*.spec.ts"],
	"include": ["src/**/*.ts"],
	"compilerOptions": {
		"types": ["node", "jest"],
		"target": "es6",
		"module": "commonjs",
		"rootDir": "./src",
		"moduleResolution": "Node",
		"typeRoots": ["./node_modules/@types"],
		"sourceMap": true,
		"outDir": "dist/",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"strictNullChecks": true,
		"skipLibCheck": true,
	}
}
